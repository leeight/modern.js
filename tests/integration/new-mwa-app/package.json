{
  "name": "@integration-test/new-mwa-app",
  "version": "0.1.0",
  "scripts": {
    "reset": "del-cli node_modules",
    "dev": "modern dev",
    "//build": "modern build",
    "start": "modern start",
    "new": "modern new",
    "lint": "modern lint",
    "test": "vitest --run --passWithNoTests"
  },
  "engines": {
    "node": ">=14.17.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet",
      "git add"
    ],
    "*.{js,jsx,mjs,mjsx,cjs,cjsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet",
      "git add"
    ]
  },
  "dependencies": {
    "@modern-js/runtime": "workspace:^1.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@modern-js/app-tools": "workspace:^1.3.2",
    "@modern-js/plugin-jarvis": "workspace:^1.2.1",
    "del-cli": "^4.0.1",
    "typescript": "^4",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@types/node": "^14",
    "@modern-js/tsconfig": "workspace:*",
    "vite": "^2.7.12",
    "vitest": "^0.1.19",
    "puppeteer": "^10.4.0",
    "eslint": "^7.32.0",
    "@scripts/eslint-config": "workspace:*",
    "@integration-test/shared": "workspace:*"
  },
  "modernConfig": {
    "runtime": {
      "router": true,
      "state": true
    }
  }
}
