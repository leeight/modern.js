{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "dist",
    "jsx": "preserve",
    "rootDir": "./",
    "baseUrl": "./",
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "src/.ts"]
}
